require("dotenv").config();
const { Client, IntentsBitField } = require("discord.js");

// setup client, then specify which intents the client uses (they are necessary) 
const client = new Client({
	intents: [
		IntentsBitField.Flags.Guilds,
		IntentsBitField.Flags.GuildMembers,
		IntentsBitField.Flags.GuildMessages,
		IntentsBitField.Flags.MessageContent,
	],
});

// upon "Hey", write "Spice is the essence of life."
const spice = (client) => {
	client.on("messageCreate", msg => {
		if (msg.author.bot) return;

		if (msg.content === "Hey!") {
			msg.reply("Spice is the essence of life.");
		}
	});
};

// put location here
	// hannover



// post what the weather will be like this week (for Hannover)
const getWeather = async () => {
	//parameters
	const lat = 52.38;
	const lon = 9.74;
	const timezone = "Europe/Berlin"


	// fetching data from open Meteo
	const apiURL = `https://api.open-meteo.com/v1/forecast?latitude=${lat}&longitude=${lon}&timezone=${timezone}&current=temperature_2m,weather_code&hourly=temperature_2m&daily=temperature_2m_max,weather_code`;

	try {
		const res = await fetch(apiURL);
		if (!res.ok) {
			throw new Error('Network response failed');
		}
		//fetch all data
		const data = await res.json();
		// fetch current time
		// fetch current temperature
		// data from Germany is from the DWD, that updates every 3 hours
		// fetch tomorrows temperature (current day = 24, tomorrow at 12 = 24 + 12)
		const { temperature_2m, weather_code: current_weather_code }= data.current;
		const current_weather= current_weather_code[1]
		const current_temperature = temperature_2m[1]

		const { temperature_2m_max, weather_code: daily_weather_code} = data.daily;
		const tomorrows_temperature_max = temperature_2m_max[1]
		const tomorrows_weather = daily_weather_code[1]

		const daily_weather_code = data.daily.weather_code;

		return { current_temperature, current_weather_code, tomorrows_temperature_max, tomorrows_weather_code};

	} catch (error) {
		console.error('Error fetching weather data:', error);
	}
};

const callback = (getWeatherCallback) => {
	client.on("messageCreate", async msg => {
		// only accept user input
		if (msg.author.bot) return;

		// wait for API fetch	
		const weather = await getWeatherCallback();
		if (!weather) return msg.reply("Failed to fetch weather");

		// only accept now and tomorrow input
		const input = msg.content.toLowerCase();
		if (input !== "today" && input !== "tomorrow") return; 

		// send data
		if (input === "today") {
			msg.reply(`${weather.current_temperature}`);
		} else {
			msg.reply(`${weather.tomorrow_temperature}`)
		}
	});
};

client.on("ready", async () => {
	console.log(`Logged in as ${client.user.tag}`);
	spice(client);
	callback(getWeather);	

	const weather = await getWeather();
	console.log(weather);

});


// login bot
client.login(process.env.TOKEN)
